<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Banners</title>
    <link rel="stylesheet" href="/banner.css">
</head>
<body>
    <h1>View Banners</h1>

    <div id="bannerContainer">
        <% banners.forEach(banner => { %>
            <div class="banner">
                <h3><%= banner.title %></h3>
                <p><%= banner.subtitle %></p>
                <p><%= banner.description %></p>
                <img src="/uploads/<%= banner.imageUrl %>" alt="Banner Image">
                <a href="/editBanner/<%= banner._id %>" class="btn">Edit</a>
                <button class="deleteBanner" data-id="<%= banner._id %>">Delete</button>
            </div>
        <% }); %>
    </div>

    <a href="/admin" class="btn">Back to Banners</a>

    <script src="admin-scripts.js"></script>
</body>
</html>
