<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Banner</title>
    <link rel="stylesheet" href="/banner.css">
</head>
<body>
    <h1>Edit Banner</h1>

    <form id="editBannerForm">
        <input type="hidden" id="bannerId" name="bannerId" value="<%= banner._id %>">
        <div class="input-group">
            <label for="title">Title:</label>
            <input type="text" id="title" name="title" value="<%= banner.title %>">
        </div>
        <div class="input-group">
            <label for="subtitle">Subtitle:</label>
            <input type="text" id="subtitle" name="subtitle" value="<%= banner.subtitle %>">
        </div>
        <div class="input-group">
            <label for="description">Description:</label>
            <textarea id="description" name="description"><%= banner.description %></textarea>
        </div>
        <button type="submit">Save Changes</button>
    </form>

    <a href="/Banners" class="btn">Back to Banners</a>

    <script src="admin-scripts.js"></script>
    <script>
        document.getElementById('editBannerForm').addEventListener('submit', function(event) {
    event.preventDefault();

    const formData = new FormData(this);

    fetch('/editBannerPost', {
        method: 'POST',
        body: formData
    })
    .then(response => {
        if (!response.ok) {
            throw new Error('Network response was not ok');
        }
        return response.text();
    })
    .then(data => {
        console.log(data); // You can handle success message or redirect here
    })
    .catch(error => {
        console.error('There was an error!', error);
    });
});

    </script>
</body>
</html>
